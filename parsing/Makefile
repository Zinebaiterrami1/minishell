CC = cc
CFLAGS = -Wall -Wextra -Werror -fsanitize=address -g3
SRC = main.c

NAME= mini

%.o: %.c
	@$(CC) $(CFLAGS) -c $< -o $@
OBJ = $(SRC:.c=.o)

$(NAME) : $(OBJ)
	@echo "ðŸš€ Building the project..."
	@$(CC) $(CFLAGS) $(OBJ) -o $(NAME)
	@echo "âœ… Build completed successfully!"

all : $(NAME)

fclean : clean
	@rm -rf $(NAME)

clean :
	@echo "ðŸ§¹ Cleaning up..."
	@rm -rf $(OBJ)
	@echo "ðŸ—‘ï¸  Cleanup done!"

re : fclean all

.PHONY: all clean fclean re